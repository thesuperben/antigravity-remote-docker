# Environment configuration for Antigravity Remote Docker
# Copy this file to .env and customize as needed

# =============================================================================
# Display Settings
# =============================================================================
# Initial resolution (will auto-adjust to browser window)
DISPLAY_WIDTH=1920
DISPLAY_HEIGHT=1080

# =============================================================================
# Security
# =============================================================================
# VNC password - CHANGE THIS TO SOMETHING SECURE!
VNC_PASSWORD=your_secure_password_here

# =============================================================================
# Timezone
# =============================================================================
# Set your timezone (e.g., America/New_York, Europe/London, Asia/Tokyo)
TZ=America/Denver

# =============================================================================
# Resource Limits (optional overrides)
# =============================================================================
# Uncomment to override docker-compose defaults
# MEMORY_LIMIT=16G
# CPU_LIMIT=8

# =============================================================================
# Idle Optimization (reduce resources when no VNC client connected)
# =============================================================================
# How often to check for connected clients (seconds)
IDLE_CHECK_INTERVAL=30

# How long to wait before entering idle mode (seconds)
IDLE_TIMEOUT=60

# Pause Antigravity process when idle (can speed up reconnection if false)
IDLE_PAUSE_ANTIGRAVITY=false
